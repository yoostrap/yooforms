{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 2,
  "name": "hizzle-forms/textarea",
  "title": "Textarea field",
  "description": "A textarea field input for forms.",
  "category": "hizzle-forms",
  "keywords": [
    "form",
    "contact",
    "textarea"
  ],
  "icon": "editor-justify",
  "parent": [ "hizzle-forms/form" ],
  "version": "1.0.0",
  "textdomain": "hizzle-forms",
  "attributes": {
    "label": {
      "type": "string",
      "default": "",
      "source": "html",
      "selector": ".hizzle-forms__field-label"
    },
    "placeholder": {
      "type": "string",
      "default": "",
      "source": "attribute",
      "selector": "textarea",
      "attribute": "placeholder"
    },
    "required": {
      "type": "boolean",
      "default": false,
      "source": "attribute",
      "selector": "textarea",
      "attribute": "required"
    },
    "help": {
      "type": "string",
      "default": "",
      "source": "html",
      "selector": ".hizzle-forms__field-help-text"
    },
    "instanceID": {
      "type": "string"
    },
    "name": {
      "type": "string",
      "source": "attribute",
      "selector": "textarea",
      "attribute": "name"
    },
    "value": {
      "type": "string",
      "default": ""
    }
  },
  "example": {
    "attributes": {
      "label": "Textarea",
      "placeholder": "Placeholder text",
      "required": true,
      "help": "Help text"
    }
  },
  "styles": [
    { "name": "hizzle-1-6", "label": "1/6" },
    { "name": "hizzle-2-6", "label": "2-6" },
    { "name": "hizzle-3-6", "label": "3-6" },
    { "name": "hizzle-4-6", "label": "4-6" },
    { "name": "hizzle-5-6", "label": "5/6" },
    { "name": "hizzle-full", "label": "Full Width", "isDefault": true }
  ],
  "supports": {
    "anchor": true,
    "spacing": {
      "margin": true,
      "padding": true
    },
    "reusable": false
  },
  "editorScript": "file:./index.js"
}